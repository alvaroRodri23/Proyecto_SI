<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="234dp"
        android:layout_height="97dp"
        app:srcCompat="@drawable/crunchyroll"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageButton
        android:id="@+id/botonperfil"
        android:layout_width="124dp"
        android:layout_height="112dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/defaulpfp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="271dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageButton
        android:id="@+id/botonseries"
        android:layout_width="200dp"
        android:layout_height="121dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/series"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="281dp" />

    <ImageButton
        android:id="@+id/botonpelis"
        android:layout_width="196dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/peliculas"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="281dp" />

    <HorizontalScrollView
        android:layout_width="409dp"
        android:layout_height="254dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="431dp"
        tools:ignore="MissingConstraints"
        android:fillViewport="true">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="400dp"
            app:srcCompat="@drawable/jjks2"
            tools:ignore="MissingConstraints"
            />



    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>