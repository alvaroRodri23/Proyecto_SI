<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondopelis"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProfileOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.264" />



    <TextView
        android:id="@+id/usernameperfil"
        android:layout_width="262dp"
        android:layout_height="114dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/barra_paraescribir"
        android:text=""
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewProfileOptions"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/passwordperfil"
        android:layout_width="262dp"
        android:visibility="visible"
        android:layout_height="114dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/barra_paraescribir"
        android:hint="PASSWORD"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.298"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/botonprincipal2"
        android:layout_width="132dp"
        android:layout_height="73dp"
        android:backgroundTint="#FF5722"
        android:text="principal"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.528"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="155dp"
        android:layout_height="146dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/black"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewProfileOptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.989"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571"
        app:srcCompat="@mipmap/defaulpfp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/rextoperfil"
        android:layout_width="300dp"
        android:layout_height="181dp"
        android:layout_marginTop="44dp"
        android:text="Elige un Avatar"
        android:textColor="@color/white"
        android:textSize="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/showHidePasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar"
        app:layout_constraintBottom_toBottomOf="@+id/passwordperfil"
        app:layout_constraintEnd_toEndOf="@+id/passwordperfil"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/passwordperfil"
        app:layout_constraintTop_toTopOf="@+id/passwordperfil"
        app:layout_constraintVertical_bias="0.166" />


</androidx.constraintlayout.widget.ConstraintLayout>
