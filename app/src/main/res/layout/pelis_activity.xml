<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">


    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondopelis"
        android:scaleType="centerCrop"
        android:layout_marginTop="60dp" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/botonperfil"
            android:layout_width="61dp"
            android:layout_height="58dp"
            android:layout_marginEnd="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/logout"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/botonhome"
            android:layout_width="61dp"
            android:layout_height="58dp"
            android:layout_marginEnd="140dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/home"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/botonanaliticas"
            android:layout_width="61dp"
            android:layout_height="58dp"
            android:layout_marginEnd="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/dashboard"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/botonforo"
            android:layout_width="61dp"
            android:layout_height="58dp"
            android:layout_marginEnd="200dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/foro"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/textPeliculasDestacadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peliculas Destacadas en la Ãºltima semana"
            android:textColor="#FFFF00"
            android:textSize="42sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintTop_toBottomOf="@id/botonperfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            tools:ignore="NotSibling" />


        <ScrollView
            android:layout_width="421dp"
            android:layout_height="644dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textPeliculasDestacadas">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imagepeli1"
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/interestellar" />

                    <TextView
                        android:id="@+id/descpeli1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="INTERESTELLAR-169 MIN"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                    <ImageView
                        android:id="@+id/imagepeli2"
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/lobo" />

                    <TextView
                        android:id="@+id/descpeli2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LOBO DE WALL STREET-180 MIN"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                    <ImageView
                        android:id="@+id/imagepeli3"
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/avatar" />

                    <TextView
                        android:id="@+id/descpeli3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AVATAR-162 MIN"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                    <ImageView
                        android:id="@+id/imagepeli4"
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/i_am_a_legend" />

                    <TextView
                        android:id="@+id/descpeli4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="I AM LEGEND-101 MIN"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                    <ImageView
                        android:id="@+id/imagepeli5"
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/trescientos" />

                    <TextView
                        android:id="@+id/descpeli5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="300-117 MIN"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                    <ImageView
                        android:id="@+id/imagepeli6"
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/strange" />

                    <TextView
                        android:id="@+id/descpeli6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DOCTOR STRANGE-115 MIN"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                    <ImageView
                        android:id="@+id/imagepeli7"
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/rogue" />

                    <TextView
                        android:id="@+id/descpeli7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ROGUE ONE: A STAR WARS STORY-133 MIN"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                    <ImageView
                        android:id="@+id/imagepeli8"
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/assasin" />

                    <TextView
                        android:id="@+id/descpeli8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ASSASINS CREED-103 MIN"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                </LinearLayout>



            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>
