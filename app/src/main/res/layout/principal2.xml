<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <!-- AppBar layout with toolbar -->
    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Fondo o background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondopelis"
        android:scaleType="centerCrop"
        android:layout_marginTop="60dp" />


    <!-- Main content layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Profile button -->
        <ImageButton
            android:id="@+id/botonperfil"
            android:layout_width="61dp"
            android:layout_height="58dp"
            android:layout_marginEnd="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/logout"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/botonhome"
            android:layout_width="61dp"
            android:layout_height="58dp"
            android:layout_marginEnd="140dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/home"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/botonanaliticas"
            android:layout_width="61dp"
            android:layout_height="58dp"
            android:layout_marginEnd="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/dashboard"
            tools:ignore="MissingConstraints" />



        <!-- Vertical ScrollView -->
        <ScrollView
            android:id="@+id/verticalScrollView"
            android:layout_width="419dp"
            android:layout_height="564dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!-- Texto "Selección" -->
                <TextView
                    android:id="@+id/textSelection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Selección"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <!-- Texto "y" -->
                <TextView
                    android:id="@+id/textAnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="DE"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <!-- Texto "Este Mes" -->
                <TextView
                    android:id="@+id/textThisMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Este Mes"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imagev4"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/lobo" /> <!-- Reducido el margen inferior -->

                <TextView
                    android:id="@+id/descriptionText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:padding="8dp"
                    android:text="Peliculas disponibles"
                    android:textColor="@android:color/white"
                    android:textSize="36sp" />

                <ImageView
                    android:id="@+id/imagev5"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/animemovies" /> <!-- Reducido el margen inferior -->

                <TextView
                    android:id="@+id/descriptionText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:padding="8dp"
                    android:text="Animes disponibles"
                    android:textColor="@android:color/white"
                    android:textSize="36sp" />

                <ImageView
                    android:id="@+id/imagev6"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/jjks2" /> <!-- Reducido el margen inferior -->

                <TextView
                    android:id="@+id/descriptionText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp"
                    android:text="Series disponibles"
                    android:textColor="@android:color/white"
                    android:textSize="36sp" />

            </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>
